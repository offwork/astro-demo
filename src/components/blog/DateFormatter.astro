---
interface Props {
  dateString: string;
}

const { dateString } = Astro.props;

const formatter = (dt: Date) =>
  dt.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
---

<time class="whitespace-nowrap" datetime={dateString}>
  {formatter(new Date(dateString))}
</time>
